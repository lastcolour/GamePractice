{
    "Project":"Build Android",
    "InputVariables":{
        "buildType":"Release"
    },
    "Steps":[
        {
            "name":"Create Project Variables",
            "type":"CreateVariables",
            "data":{
                "rootSources":"${currentDir}/../Sources",
                "gameSources":"${rootSources}/Code",
                "binsRoot":"${currentDir}/../_build/Android",
                "gameBinsRoot":"${binsRoot}/Game",
                "libSources":"${rootSources}/Libs",
                "libsBins":"${binsRoot}/Libs"
            }
        },
        {
            "name":"Build Oboe",
            "type": "AndroidCmakeGenerate",
            "dependOn":[],
            "data": {
                "separate_bins":true,
                "run_dir": "${libSources}/Oboe",
                "out_dir": "${libsBins}/Oboe",
                "build_type":"Release",
                "verbosity":"silent",
                "defs" : {}
            }
        },
        {
            "name":"Build FreeType2",
            "type": "AndroidCmakeGenerate",
            "data": {
                "separate_bins":true,
                "run_dir": "${libSources}/FreeType2",
                "out_dir": "${libsBins}/FreeType2",
                "build_type":"Release",
                "verbosity":"silent",
                "defs" : {}
            }
        },
        {
            "name":"Build Game",
            "type":"AndroidCmakeGenerate",
            "dependOn":[],
            "data":{
                "separate_bins":false,
                "run_dir":"${gameSources}",
                "out_dir":"${gameBinsRoot}",
                "build_type":"${buildType}",
                "defs":{}
            }
        }
    ]
}