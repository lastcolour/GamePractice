{
    "Project":"Build Libs",
    "InputVariables":{},
    "Steps":[
        {
            "name":"Create Variables",
            "type":"CreateVariables",
            "data":{
                "libsBins":"${binsRoot}/Libs"
            }
        },
        {
            "name":"Building Windows",
            "type":"IfVariableEqual",
            "data":{
                "varA":"${platform}",
                "varB":"Windows"
            }
        },
        {
            "name":"Building Linux",
            "type":"IfVariableEqual",
            "data":{
                "varA":"${platform}",
                "varB":"Linux"
            }
        },
        {
            "name":"Building PC",
            "type":"IfVariableInSet",
            "data": {
                "var":"${platform}",
                "set":["Windows", "Linux"]
            }
        },
        {
            "name":"Build GLFW",
            "type":"CmakeGenerate",
            "dependOn":["Building PC"],
            "data":{
                "separate_bins":true,
                "run_dir":"${libSources}/GLFW",
                "out_dir":"${libsBins}/GLFW",
                "build_type":"Release",
                "verbosity":"silent",
                "defs":{
                    "General": {
                        "BUILD_SHARED_LIBS": "ON",
                        "GLFW_BUILD_EXAMPLES": "OFF",
                        "GLFW_BUILD_TESTS": "OFF",
                        "GLFW_BUILD_DOCS": "OFF"
                    }
                }
            }
        },
        {
            "name":"Copy GLFW Binaries",
            "type":"CopyFiles",
            "dependOn":["Build GLFW"],
            "data":{
                "targets": ["glfw*.*", "libglfw*.*"],
                "from":"${libsBins}/GLFW/Release",
                "to":"${gameBinsRoot}/${buildType}",
                "force":true
            }
        },
        {
            "name":"Build GLAD",
            "type":"CmakeGenerate",
            "dependOn":["Building PC"],
            "data":{
                "separate_bins":true,
                "run_dir":"${libSources}/GLAD",
                "out_dir":"${libsBins}/GLAD",
                "build_type":"${buildType}",
                "verbosity":"silent",
                "defs":{
                    "Debug":{
                        "GLAD_GENERATOR":"c-debug"
                    },
                    "Release":{
                        "GLAD_GENERATOR":"c"
                    },
                    "Linux":{
                        "BUILD_SHARED_LIBS":"ON"
                    }
                }
            }
        },
        {
            "name":"Copy GLAD Binaries",
            "type":"CopyFiles",
            "dependOn":["Build GLAD", "Building Linux"],
            "data":{
                "targets":["libglad.so"],
                "from":"${libsBins}/GLAD/${buildType}",
                "to":"${gameBinsRoot}/${buildType}",
                "force":true
            }
        },
        {
            "name":"Build FreeType2",
            "type": "CmakeGenerate",
            "data": {
                "separate_bins":true,
                "run_dir": "${libSources}/FreeType2",
                "out_dir": "${libsBins}/FreeType2",
                "build_type":"Release",
                "verbosity":"silent",
                "defs" : {
                    "Linux":{
                        "BUILD_SHARED_LIBS":"ON"
                    }
                }
            }
        },
        {
            "name":"Copy FreeType2 Binaries",
            "type":"CopyFiles",
            "dependOn":["Build FreeType2", "Building Linux"],
            "data":{
                "targets":["libfreetype.so"],
                "from":"${libsBins}/FreeType2/Release",
                "to":"${gameBinsRoot}/${buildType}",
                "force":true
            }
        },
        {
            "name":"Build ZLib",
            "dependOn":["Building Windows"],
            "type": "CmakeGenerate",
            "data": {
                "separate_bins":true,
                "run_dir": "${libSources}/ZLIB",
                "out_dir": "${libsBins}/ZLIB",
                "build_type":"Release",
                "verbosity":"silent",
                "defs" : {}
            }
        },
        {
            "name":"Build OpenAL-Soft",
            "type": "CmakeGenerate",
            "dependOn":["Building PC"],
            "data": {
                "separate_bins":true,
                "run_dir": "${libSources}/OpenAL-Soft",
                "out_dir": "${libsBins}/OpenAL-Soft",
                "build_type":"Release",
                "verbosity":"silent",
                "defs" : {
                    "General":{
                        "ALSOFT_EXAMPLES":"OFF",
                        "ALSOFT_TESTS":"OFF",
                        "ALSOFT_INSTALL":"OFF",
                        "ALSOFT_UTILS":"OFF"
                    }
                }
            }
        },
        {
            "name":"Copy OpenAL-Soft Binaries",
            "type":"CopyFiles",
            "dependOn":["Build OpenAL-Soft"],
            "data":{
                "targets":["libopenal.so"],
                "from":"${libsBins}/OpenAL-Soft/Release",
                "to":"${gameBinsRoot}/${buildType}",
                "force":true
            }
        },
        {
            "name":"Build GTest",
            "type": "CmakeGenerate",
            "dependOn":["Building PC"],
            "data": {
                "separate_bins":true,
                "run_dir": "${libSources}/GTEST",
                "out_dir": "${libsBins}/GTEST",
                "build_type":"${buildType}",
                "verbosity":"silent",
                "defs" : {
                    "General": {
                        "gtest_force_shared_crt": "ON"
                    }
                }
            }
        }
    ]
}